        <!-- ADD PROJECT -->
        <div class="container text-center mt-5 mb-3">
            <h1>Add New Project</h1>
        </div>

        <div class="container">
        {{!-- onsubmit="submitData(event)" --}}
            <form class="w-75 mx-auto" method="post" action="/addproject" autocomplete="off">
                <div class="mb-2">
                    <label for="project_name">Project Name:</label class="form-label"><br>
                    <input class="form-control" type="text" id="project_name" name="project_name">
                </div>

                <div class="form-row date">
                    <div class="form-group g-2 col-md-6">
                        <label for="start_date">Start Date:</label><br>
                        <input
                            type="date"
                            class="form-control"
                            id="start_date"
                            required="required"
                            name="start_date">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="end_date">End Date:</label><br>
                        <input
                            type="date"
                            class="form-control"
                            id="end_date"
                            required="required"
                            name="end_date">
                    </div>
                </div>

                <label for="description" class="mt-2">Description:</label><br>
                <div class="form-floating mt-3">
                    <textarea
                        class="form-control"
                        id="description"
                        name="description"
                        style="height: 150px;"></textarea>
                </div><br>

                <div class="mb-3">
                    <label for="technologies" class="mb-2">Technologies:</label><br>
                    <div class="form-check form-check-inline">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            id="nodejs"
                            name="technologies"
                            value="Node Js">
                        <label class="form-check-label" for="nodejs">Node JS</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            id="nextjs"
                            name="technologies"
                            value="Next Js">
                        <label class="form-check-label" for="nextjs">Next Js</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            id="reactjs"
                            name="technologies"
                            value="React Js">
                        <label class="form-check-label" for="reactjs">React Js</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            id="typescript"
                            name="technologies"
                            value="Typescript">
                        <label class="form-check-label" for="typescript">Typescript</label>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <label class="input-group-text" for="input-blog-image">Upload</label>
                    <input type="file" class="form-control" id="input-blog-image" accept="image/*">
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </div>
            </form>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#eadbc8" fill-opacity="1" d="M0,256L48,229.3C96,203,192,149,288,160C384,171,480,245,576,282.7C672,320,768,320,864,288C960,256,1056,192,1152,186.7C1248,181,1344,235,1392,261.3L1440,288L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
        <!-- END FORM -->

        <!-- FILTERING -->
        <section id="fcard" class="pt-1">
        <div class="filter pb-1 mt-5">
            <h1>My Project</h1>
        </div>

        <div class="filter">
            <label for="filter_technology">Filter by technologies:</label>
            <select
                name="filter_technology"
                id="filter_technology"
                onchange="filterProjectBasedOnTechnology()">
                <option value="all">All</option>
                <option value="Node Js">Node JS</option>
                <option value="Next Js">Next JS</option>
                <option value="React Js">React JS</option>
                <option value="Typescript">Typescript</option>
            </select>
        </div>
        <!-- END FILTERING -->

        <!-- CARD -->
        <div class="container col-md-2 mt-5" id="contents">
